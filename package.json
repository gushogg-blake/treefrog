{
	"name": "editor",
	"description": "editor",
	"author": "Gus Hogg-Blake",
	"version": "1.0.0",
	"main": "./src/main.js",
	"dependencies": {
		"chokidar": "^3.5.1",
		"detect-indent": "^6.0.0",
		"detect-newline": "^3.1.0",
		"electron-better-ipc": "^1.1.1",
		"electron-is-dev": "^1.1.0",
		"electron-settings": "^3.2.0",
		"electron-window-state": "^5.0.3",
		"flowfs": "^4.0.0",
		"yargs": "^17.0.1"
	},
	"devDependencies": {
		"autoprefixer": "^9.7.3",
		"cross-env": "^6.0.3",
		"electron": "^12.0.2",
		"electron-builder": "^21.2.0",
		"mocha": "^8.3.2",
		"node-sass": "^4.13.1",
		"npm-run-all": "^4.1.5",
		"rollup": "^2.44.0",
		"rollup-plugin-commonjs": "^10.0.0",
		"rollup-plugin-livereload": "^2.0.0",
		"rollup-plugin-node-builtins": "^2.1.2",
		"rollup-plugin-node-globals": "^1.4.0",
		"rollup-plugin-node-resolve": "^5.2.0",
		"rollup-plugin-svelte": "^5.1.1",
		"rollup-plugin-terser": "^7.0.2",
		"sirv-cli": "^0.4.4",
		"svelte": "^3.16.7",
		"svelte-preprocess": "^3.3.0"
	},
	"scripts": {
		"build": "rollup -c",
		"autobuild": "rollup -c -w",
		"dev": "run-p start:dev autobuild",
		"start": "sirv public --single",
		"start:dev": "sirv public --single --dev",
		"electron": "run-s build pure-electron",
		"electron-dev": "run-p autobuild pure-electron-dev",
		"dist": "run-s build pure-dist-win",
		"pure-electron": "electron .",
		"pure-electron-dev": "cross-env NODE_ENV=development electron . --watch",
		"pure-dist-win": "electron-builder --win --config electron-builder.yml",
		"test": "./node_modules/mocha/bin/mocha 'test/tests/**/*.test.js'"
	}
}
